{
    "title": "System Configuration",
    "elements": [
      {
        "type": "input",
        "label": "Email",
        "name": "email",
        "required": true,
        "validation": {
          "type": "email",
          "message": "Please enter a valid email address."
        }
      },
      {
        "type": "section",
        "label": "Modify Cores",
        "elements": [
          {
            "type": "checkbox",
            "label": "Enable Modify Cores",
            "name": "modifyCores",
            "default": false
          },
          {
            "type": "select",
            "label": "Number of Cores",
            "name": "numCores",
            "options": [
              {"label": "2", "value": 2},
              {"label": "4", "value": 4},
              {"label": "8", "value": 8}
            ],
            "default": 2,
            "visible": "data.modifyCores === true"
          }
        ]
      },
        {
    "title": "Devtron Installation",
    "type": "object",
    "properties": {
      "enableDevtron": {
        "type": "boolean",
        "title": "Enable Devtron Installation",
        "default": false
      }
    }
  }
    ]
  }
  