{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._%+-]+@devtron\\.ai$",
      "errorMessage": "Email must end with @badal.com"
    },
    "installDevtron": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["email"],
  "additionalProperties": false
}
