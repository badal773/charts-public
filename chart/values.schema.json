{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._%+-]+@devtron\\.ai$",
      "errorMessage": "Email must end with @badal.com",
      "title": "Email-Id",
      "description": "please enter your email-id"
    },
    "installDevtron": {
      "type": "boolean",
      "default": false,
      "description": "please click here if you want to  install Devtron"
    }
  },
  "required": ["email"],
  "additionalProperties": false
}
